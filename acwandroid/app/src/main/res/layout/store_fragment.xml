<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:context=".ui.main.StoreFragment">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<androidx.appcompat.widget.Toolbar
			android:id="@+id/store_toolbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/colorGreenBack"
			android:minHeight="?attr/actionBarSize"
			android:theme="?attr/actionBarTheme"
			app:titleTextColor="@color/colorYellowText"
			app:title="Store" />

		<ScrollView
			android:id="@+id/store_scroll"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:background="#D5E0E5" />

	</LinearLayout>

	<ProgressBar
		android:id="@+id/store_progress"
		style="@android:style/Widget.ProgressBar"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:indeterminate="true"
		android:indeterminateDrawable="@drawable/progress" />

</RelativeLayout>